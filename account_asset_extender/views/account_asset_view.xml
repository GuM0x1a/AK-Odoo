<odoo>
    <record id="view_account_asset_asset_tree" model="ir.ui.view">
      <field name="name">view_account_asset_category_tree.inherit.extension</field>
      <field name="model">account.asset.asset</field>
      <field name="inherit_id" ref="account_asset.view_account_asset_asset_purchase_tree"/>
      <field name="arch" type="xml">
        <tree>
                    <field name='vendor_id'/>
                    <field name='manufacturer'/>
                    <field name='model'/>
                    <field name='serial'/>
                    <field name='asset_number'/>
                    <field name='user_id'/>
                    <field name='purchase_date'/>
        </tree>
      </field>
    </record>

 <record id="view_account_asset_asset_form_inherit_extension" model="ir.ui.view">
      <field name="name">view.account.asset.category.form.inherit.extension</field>
      <field name="model">account.asset.asset</field>
      <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
      <field name="arch" type="xml">

        <xpath expr="//field[@name='date']" position="after">
            <field name='asset_number'/>
        </xpath>

        <xpath expr="//field[@name='date']" position="after">
            <field name='vendor_id'/>
        </xpath>

        <xpath expr="//field[@name='vendor_id']" position="after">
            <field name='manufacturer'/>
        </xpath>

        <xpath expr="//field[@name='manufacturer']" position="after">
            <field name='model'/>
        </xpath>

        <xpath expr="//field[@name='model']" position="after">
            <field name='serial'/>
        </xpath>

        <xpath expr="//field[@name='asset_number']" position="after">
            <field name='purchase_date'/>
        </xpath>

        <xpath expr="//field[@name='purchase_date']" position="after">
            <field name='purchase_amount'/>
        </xpath>

        <xpath expr="//field[@name='purchase_amount']" position="after">
            <field name='warranty_start_date'/>
        </xpath>

        <xpath expr="//field[@name='warranty_start_date']" position="after">
            <field name='warranty_end_date'/>
        </xpath>

        <xpath expr="//field[@name='warranty_end_date']" position="after">
            <field name='user_id'/>
        </xpath>
      </field>
    </record>
    
</odoo>
